<Window x:Class="TrabajoInterfacesFinal.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:TrabajoInterfacesFinal"
        Title="SteamClone - Proyecto Integrado" Height="720" Width="1200"
        Background="#1b2838" WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <local:ImagePathConverter x:Key="ImagePathConverter"/>
        
        <Style x:Key="BotonMenu" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#b8b6b4"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Height" Value="45"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="15,0,0,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter
    Content="{TemplateBinding Content}"
    HorizontalAlignment="Center"
    VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#3d4450"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="BotonVerde" TargetType="Button">
            <Setter Property="Background" Value="#5c7e10"/>
            <Setter Property="Foreground" Value="#d2efa9"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="2">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#76a113"/>
                </Trigger>
            </Style.Triggers>
        </Style>

    </Window.Resources>

    <Grid>
        <Grid x:Name="Grid_Login" Visibility="Visible" Panel.ZIndex="10" Background="#1b2838">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="320">
                <TextBlock Text="INICIAR SESIÓN" Foreground="White" FontSize="28" FontWeight="Bold" Margin="0,0,0,30"/>

                <TextBlock Text="USUARIO" Foreground="#1999ff" FontWeight="Bold" FontSize="12"/>
                <TextBox x:Name="txtUserLogin" Height="35" Margin="0,5,0,15" Background="#323f53" Foreground="White" BorderThickness="0" Padding="5"/>

                <TextBlock Text="CONTRASEÑA" Foreground="#1999ff" FontWeight="Bold" FontSize="12"/>
                <PasswordBox x:Name="txtPassLogin" Height="35" Margin="0,5,0,25" Background="#323f53" Foreground="White" BorderThickness="0" Padding="5"/>

                <Button Content="ENTRAR" Click="BtnLogin_Click" Height="45" Style="{StaticResource BotonVerde}"/>

                <TextBlock x:Name="lblErrorLogin" Foreground="#c44343" Margin="0,15,0,0" HorizontalAlignment="Center"/>
                
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                    <TextBlock Text="¿No tienes cuenta?" Foreground="#b8b6b4" VerticalAlignment="Center"/>
                    <Button Content="Registrarse" Click="BtnMostrarRegistro_Click" Background="Transparent" Foreground="#66c0f4" BorderThickness="0" FontWeight="Bold" Margin="5,0,0,0" Cursor="Hand"/>
                </StackPanel>
            </StackPanel>
        </Grid>

        <Grid x:Name="Grid_Registro" Visibility="Collapsed" Panel.ZIndex="10" Background="#1b2838">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="360">
                <TextBlock Text="CREAR CUENTA" Foreground="White" FontSize="28" FontWeight="Bold" Margin="0,0,0,30"/>

                <TextBlock Text="NOMBRE DE USUARIO" Foreground="#1999ff" FontWeight="Bold" FontSize="12"/>
                <TextBox x:Name="txtNombreRegistro" Height="35" Margin="0,5,0,15" Background="#323f53" Foreground="White" BorderThickness="0" Padding="5"/>

                <TextBlock Text="CORREO ELECTRÓNICO" Foreground="#1999ff" FontWeight="Bold" FontSize="12"/>
                <TextBox x:Name="txtEmailRegistro" Height="35" Margin="0,5,0,15" Background="#323f53" Foreground="White" BorderThickness="0" Padding="5"/>

                <TextBlock Text="CONTRASEÑA" Foreground="#1999ff" FontWeight="Bold" FontSize="12"/>
                <PasswordBox x:Name="txtPassRegistro" Height="35" Margin="0,5,0,15" Background="#323f53" Foreground="White" BorderThickness="0" Padding="5"/>

                <TextBlock Text="CONFIRMAR CONTRASEÑA" Foreground="#1999ff" FontWeight="Bold" FontSize="12"/>
                <PasswordBox x:Name="txtPassConfirmarRegistro" Height="35" Margin="0,5,0,25" Background="#323f53" Foreground="White" BorderThickness="0" Padding="5"/>

                <Button Content="CREAR CUENTA" Click="BtnRegistrar_Click" Height="45" Style="{StaticResource BotonVerde}"/>

                <TextBlock x:Name="lblErrorRegistro" Foreground="#c44343" Margin="0,15,0,0" HorizontalAlignment="Center" TextWrapping="Wrap" TextAlignment="Center"/>
                
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                    <TextBlock Text="¿Ya tienes cuenta?" Foreground="#b8b6b4" VerticalAlignment="Center"/>
                    <Button Content="Iniciar Sesión" Click="BtnMostrarLogin_Click" Background="Transparent" Foreground="#66c0f4" BorderThickness="0" FontWeight="Bold" Margin="5,0,0,0" Cursor="Hand"/>
                </StackPanel>
            </StackPanel>
        </Grid>


        <Grid x:Name="Grid_Aplicacion" Visibility="Collapsed">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="#171a21">
                <StackPanel HorizontalAlignment="Center">
                    <TextBlock Text="ENEVO" Foreground="White" FontSize="20" FontWeight="Bold" Margin="20,30,0,30"/>

                    <Button Content="TIENDA" Click="Nav_Tienda_Click" Style="{StaticResource BotonMenu}" HorizontalContentAlignment="Center" />
                    
                    <Button Content="BIBLIOTECA" Click="Nav_Biblioteca_Click" Style="{StaticResource BotonMenu}" HorizontalContentAlignment="Center"/>
                    <Button Content="MI PERFIL" Click="Nav_Perfil_Click" Style="{StaticResource BotonMenu}" HorizontalContentAlignment="Center"/>

                    <StackPanel Orientation="Horizontal">


                        <StackPanel Margin="20,40,0,0">
                            <TextBlock x:Name="txtUsuarioMenu" Text="Usuario" Foreground="#66c0f4" FontWeight="Bold"/>
                            <TextBlock x:Name="txtSaldoMenu" Text="Cartera: 100.00€" Foreground="#a3b3c1" Margin="0,5,0,0"/>

                        </StackPanel>

                        <Button x:Name="btnMenuCarrito" 
Click="Nav_Carrito_Click" 
Foreground="#66c0f4" 
ToolTip="Ver Carrito de Compra" 
Width="120" 
Height="120" 
Cursor="Hand">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="Transparent">
                                        <ContentPresenter
        Content="{TemplateBinding Content}"
        HorizontalAlignment="Center"
        VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>


                            <Button.RenderTransform>
                                <ScaleTransform x:Name="scale" ScaleX="1" ScaleY="1"/>
                            </Button.RenderTransform>
                            <Button.RenderTransformOrigin>0.5,0.5</Button.RenderTransformOrigin>

                            <Button.Style>
                                <Style TargetType="Button">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Trigger.EnterActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation Storyboard.TargetProperty="(Button.RenderTransform).(ScaleTransform.ScaleX)" 
                                         To="1.15" Duration="0:0:0.15"/>
                                                        <DoubleAnimation Storyboard.TargetProperty="(Button.RenderTransform).(ScaleTransform.ScaleY)" 
                                         To="1.15" Duration="0:0:0.15"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </Trigger.EnterActions>
                                            <Trigger.ExitActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation Storyboard.TargetProperty="(Button.RenderTransform).(ScaleTransform.ScaleX)" 
                                         To="1" Duration="0:0:0.15"/>
                                                        <DoubleAnimation Storyboard.TargetProperty="(Button.RenderTransform).(ScaleTransform.ScaleY)" 
                                         To="1" Duration="0:0:0.15"/>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </Trigger.ExitActions>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>

                            <Image Source="/Imagen/ImagenCarrito.png" Stretch="Uniform" MaxWidth="50" MaxHeight="50" HorizontalAlignment="Center" VerticalAlignment="Center"/>

                        </Button>
                    </StackPanel>
                    <Button Content="Cerrar Sesión" Click="BtnLogout_Click" Margin="20,20,20,0" Height="30" Background="#2a3f5a" Foreground="White" BorderThickness="0"/>
                </StackPanel>
            </Border>

            <Grid Grid.Column="1" Background="#1b2838">

                <Grid x:Name="Grid_Tienda" Visibility="Visible" Margin="20">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                        <TextBox x:Name="txtBuscador" Width="250" Height="35" Background="#223a50" Foreground="White" BorderThickness="0" VerticalContentAlignment="Center" Padding="10,0" TextChanged="TxtBuscador_TextChanged"/>
                        <TextBlock Text="🔍" VerticalAlignment="Center" Foreground="Gray" Margin="-30,0,20,0" IsHitTestVisible="False"/>
                        <ComboBox x:Name="cmbFiltroGenero" Width="180" Height="35" Background="#223a50" Foreground="Black" VerticalContentAlignment="Center" SelectionChanged="CmbFiltroGenero_SelectionChanged">
                            <ComboBoxItem Content="Todas las géneros" IsSelected="True"/>
                            <ComboBoxItem Content="Acción"/>
                            <ComboBoxItem Content="RPG"/>
                            <ComboBoxItem Content="Aventura"/>
                            <ComboBoxItem Content="Deportes"/>
                            <ComboBoxItem Content="Estrategia"/>
                        </ComboBox>
                    </StackPanel>

                    <ScrollViewer Grid.Row="1">
                        <WrapPanel x:Name="PanelJuegos" Orientation="Horizontal"/>
                    </ScrollViewer>
                </Grid>


                <Grid x:Name="Grid_Detalle" Visibility="Collapsed" Margin="30">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" Margin="0,0,20,0">
                        <Button Content="&lt; VOLVER A TIENDA" Click="Nav_Tienda_Click" Background="Transparent" Foreground="#66c0f4" BorderThickness="0" HorizontalAlignment="Left" Margin="0,0,0,20"/>
                        <TextBlock x:Name="txtDetalleTitulo" Text="TITULO JUEGO" FontSize="36" Foreground="White" FontWeight="Bold"/>
                        <Border x:Name="borderDetalleImagen" Height="300" Background="Black" Margin="0,20" CornerRadius="5">
                            <Image x:Name="imgDetalleJuego" Stretch="UniformToFill"/>
                        </Border>
                        <TextBlock x:Name="txtDetalleDescripcion" Text="Descripción detallada del juego..." Foreground="#acb2b8" TextWrapping="Wrap" FontSize="14" LineHeight="22"/>

                        <StackPanel x:Name="panelEstrellasDetalle" Orientation="Horizontal" Margin="0,6,0,0">
                            <TextBlock Text="★" FontSize="18" Margin="0,0,2,0">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="Gray"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ValoracionPromedioRedondeada}" Value="1">
                                                <Setter Property="Foreground" Value="Gold"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding ValoracionPromedioRedondeada}" Value="2">
                                                <Setter Property="Foreground" Value="Gold"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding ValoracionPromedioRedondeada}" Value="3">
                                                <Setter Property="Foreground" Value="Gold"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding ValoracionPromedioRedondeada}" Value="4">
                                                <Setter Property="Foreground" Value="Gold"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding ValoracionPromedioRedondeada}" Value="5">
                                                <Setter Property="Foreground" Value="Gold"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            <TextBlock Text="★" FontSize="18" Margin="0,0,2,0">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="Gray"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ValoracionPromedioRedondeada}" Value="2">
                                                <Setter Property="Foreground" Value="Gold"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding ValoracionPromedioRedondeada}" Value="3">
                                                <Setter Property="Foreground" Value="Gold"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding ValoracionPromedioRedondeada}" Value="4">
                                                <Setter Property="Foreground" Value="Gold"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding ValoracionPromedioRedondeada}" Value="5">
                                                <Setter Property="Foreground" Value="Gold"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            <TextBlock Text="★" FontSize="18" Margin="0,0,2,0">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="Gray"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ValoracionPromedioRedondeada}" Value="3">
                                                <Setter Property="Foreground" Value="Gold"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding ValoracionPromedioRedondeada}" Value="4">
                                                <Setter Property="Foreground" Value="Gold"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding ValoracionPromedioRedondeada}" Value="5">
                                                <Setter Property="Foreground" Value="Gold"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            <TextBlock Text="★" FontSize="18" Margin="0,0,2,0">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="Gray"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ValoracionPromedioRedondeada}" Value="4">
                                                <Setter Property="Foreground" Value="Gold"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding ValoracionPromedioRedondeada}" Value="5">
                                                <Setter Property="Foreground" Value="Gold"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            <TextBlock Text="★" FontSize="18">
                                <TextBlock.Style>
                                    <Style TargetType="TextBlock">
                                        <Setter Property="Foreground" Value="Gray"/>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ValoracionPromedioRedondeada}" Value="5">
                                                <Setter Property="Foreground" Value="Gold"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                            <TextBlock Text="{Binding ValoracionPromedioTexto}" 
                                       Foreground="#66c0f4" 
                                       FontSize="12" 
                                       Margin="10,0,0,0"
                                       VerticalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>
                    <Border Grid.Column="1" Background="#14171e" Padding="20" Height="200" VerticalAlignment="Top">
                        <StackPanel>
                            <TextBlock Text="Comprar" Foreground="White" FontSize="20"/>
                            <TextBlock x:Name="txtDetallePrecio" Text="00.00€" Foreground="White" FontSize="16" Margin="0,10"/>
                            <Button Content="AÑADIR AL CARRO" Click="BtnComprar_Click" Height="40" Style="{StaticResource BotonVerde}"/>
                        </StackPanel>
                    </Border>
                </Grid>


                <Grid x:Name="Grid_Carrito" Visibility="Collapsed" Margin="30">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="380"/>
                    </Grid.ColumnDefinitions>
                    
                    <!-- Sección izquierda - Lista de juegos -->
                    <StackPanel Grid.Column="0" Grid.Row="0" Grid.RowSpan="3" Margin="0,0,20,0">
                        <TextBlock Text="TU CARRITO DE COMPRA" 
                                   FontSize="28" 
                                   Foreground="White" 
                                   FontWeight="Bold"
                                   Margin="0,0,0,10"/>
                        <TextBlock Text="Revisa tus artículos antes de proceder al pago" 
                                   FontSize="13" 
                                   Foreground="#8A8A8A" 
                                   Margin="0,0,0,25"/>
                        
                        <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="500">
                            <ItemsControl x:Name="listaCarrito" Background="Transparent">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Background="#232F3E" 
                                                CornerRadius="8" 
                                                Margin="0,0,0,15" 
                                                Padding="15"
                                                BorderBrush="#3A4A5A"
                                                BorderThickness="1">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="140"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="Auto"/>
                                                </Grid.ColumnDefinitions>
                                                
                                                <!-- Imagen del juego -->
                                                <Border Grid.Column="0" 
                                                        Width="120" 
                                                        Height="80" 
                                                        Background="Black" 
                                                        CornerRadius="5" 
                                                        Margin="0,0,15,0">
                                                    <Image Source="{Binding Imagen, Converter={StaticResource ImagePathConverter}}" 
                                                           Stretch="UniformToFill"/>
                                                </Border>
                                                
                                                <!-- Información del juego -->
                                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                                    <TextBlock Text="{Binding Titulo}" 
                                                               Foreground="White" 
                                                               FontWeight="Bold" 
                                                               FontSize="16"
                                                               TextWrapping="Wrap"/>
                                                    <TextBlock Text="{Binding Genero}" 
                                                               Foreground="#7FC7A3" 
                                                               FontSize="12" 
                                                               Margin="0,4,0,0"/>
                                                </StackPanel>
                                                
                                                <!-- Precio y botón eliminar -->
                                                <StackPanel Grid.Column="2" VerticalAlignment="Center" Margin="15,0,0,0">
                                                    <TextBlock Text="{Binding Precio, StringFormat={}{0}€}" 
                                                               Foreground="#66c0f4" 
                                                               FontSize="18" 
                                                               FontWeight="Bold"
                                                               HorizontalAlignment="Right"
                                                               Margin="0,0,0,10"/>
                                                    <Button Content="🗑 Eliminar"
                                                            Padding="10,6"
                                                            Background="#c94f4f"
                                                            Foreground="White"
                                                            FontSize="11"
                                                            BorderThickness="0"
                                                            Cursor="Hand"
                                                            Click="BtnEliminarCarrito_Click"
                                                            Tag="{Binding}">
                                                        <Button.Style>
                                                            <Style TargetType="Button">
                                                                <Setter Property="Template">
                                                                    <Setter.Value>
                                                                        <ControlTemplate TargetType="Button">
                                                                            <Border Background="{TemplateBinding Background}" 
                                                                                    CornerRadius="4"
                                                                                    Padding="{TemplateBinding Padding}">
                                                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                                            </Border>
                                                                        </ControlTemplate>
                                                                    </Setter.Value>
                                                                </Setter>
                                                                <Style.Triggers>
                                                                    <Trigger Property="IsMouseOver" Value="True">
                                                                        <Setter Property="Background" Value="#d63939"/>
                                                                    </Trigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Button.Style>
                                                    </Button>
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                        
                        <!-- Mensaje cuando el carrito está vacío -->
                        <StackPanel x:Name="mensajeCarritoVacio" 
                                    Visibility="Collapsed"
                                    HorizontalAlignment="Center" 
                                    VerticalAlignment="Center"
                                    Margin="0,100,0,0">
                            <TextBlock Text="🛒" 
                                       FontSize="72" 
                                       Foreground="#3A4A5A"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,20"/>
                            <TextBlock Text="Tu carrito está vacío" 
                                       FontSize="24" 
                                       Foreground="#8A8A8A"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,10"/>
                            <TextBlock Text="Explora la tienda y añade juegos increíbles" 
                                       FontSize="14" 
                                       Foreground="#6A6A6A"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,30"/>
                            <Button Content="IR A LA TIENDA" 
                                    Click="Nav_Tienda_Click"
                                    Style="{StaticResource BotonVerde}"
                                    Height="45"
                                    Width="200"
                                    FontSize="14"/>
                        </StackPanel>
                    </StackPanel>
                    
                    <!-- Panel derecho - Resumen de compra -->
                    <Border Grid.Column="1" 
                            Grid.Row="0"
                            Grid.RowSpan="3"
                            Background="#14171e" 
                            CornerRadius="8" 
                            Padding="25"
                            VerticalAlignment="Top">
                        <StackPanel>
                            <TextBlock Text="RESUMEN DE COMPRA" 
                                       Foreground="White" 
                                       FontSize="20"
                                       FontWeight="Bold"
                                       Margin="0,0,0,25"/>

                            <!-- Detalles del pedido -->
                            <Border Background="#1b2838" 
                                    Padding="15" 
                                    CornerRadius="5" 
                                    Margin="0,0,0,20">
                                <StackPanel>
                                    <DockPanel Margin="0,0,0,15">
                                        <TextBlock Text="Artículos:" 
                                                   Foreground="#a3b3c1" 
                                                   FontSize="14"
                                                   VerticalAlignment="Center"/>
                                        <TextBlock x:Name="txtCantidadItems" 
                                                   Text="0" 
                                                   DockPanel.Dock="Right" 
                                                   Foreground="White" 
                                                   FontSize="14"
                                                   FontWeight="SemiBold"
                                                   VerticalAlignment="Center"
                                                   Margin="10,0"/>
                                    </DockPanel>
                                    
                                    <DockPanel Margin="0,0,0,15">
                                        <TextBlock Text="Subtotal:" 
                                                   Foreground="#a3b3c1" 
                                                   FontSize="14"
                                                   VerticalAlignment="Center"/>
                                        <TextBlock x:Name="txtSubtotal" 
                                                   Text="0.00€" 
                                                   DockPanel.Dock="Right" 
                                                   Foreground="White" 
                                                   FontSize="14"
                                                   FontWeight="SemiBold"
                                                   VerticalAlignment="Center"
                                                   Margin="10,0"/>
                                    </DockPanel>
                                    
                                    <Separator Background="#3A4A5A" Margin="0,5,0,15"/>
                                    
                                    <DockPanel Margin="0,5,0,0">
                                        <TextBlock Text="TOTAL:" 
                                                   Foreground="White" 
                                                   FontWeight="Bold"
                                                   FontSize="18"
                                                   VerticalAlignment="Center"/>
                                        <TextBlock x:Name="txtTotalCarrito" 
                                                   Text="0.00€" 
                                                   DockPanel.Dock="Right" 
                                                   Foreground="#66c0f4" 
                                                   FontWeight="Bold"
                                                   FontSize="22"
                                                   VerticalAlignment="Center"
                                                   Margin="10,0"/>
                                    </DockPanel>
                                </StackPanel>
                            </Border>

                            <!-- Información del saldo -->
                            <Border Background="#2a475e" 
                                    Padding="15" 
                                    CornerRadius="5" 
                                    Margin="0,0,0,20">
                                <DockPanel>
                                    <TextBlock Text="💰 Tu saldo:" 
                                               Foreground="#c7d5e0" 
                                               FontSize="14"
                                               VerticalAlignment="Center"/>
                                    <TextBlock x:Name="txtSaldoCarrito" 
                                               Text="0.00€" 
                                               DockPanel.Dock="Right" 
                                               Foreground="#90EE90" 
                                               FontSize="17"
                                               FontWeight="Bold"
                                               VerticalAlignment="Center"
                                               Margin="10,0"/>
                                </DockPanel>
                            </Border>

                            <!-- Botón de pago -->
                            <Button Content="PROCEDER AL PAGO" 
                                    Click="BtnPagarCarrito_Click" 
                                    Height="50" 
                                    Style="{StaticResource BotonVerde}"
                                    FontSize="16"
                                    Margin="0,0,0,15"/>
                            
                            <!-- Botón continuar comprando -->
                            <Button Content="Continuar Comprando" 
                                    Click="Nav_Tienda_Click"
                                    Height="40"
                                    Background="Transparent"
                                    Foreground="#66c0f4"
                                    BorderBrush="#66c0f4"
                                    BorderThickness="1"
                                    FontSize="13"
                                    Cursor="Hand">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" 
                                                            BorderBrush="{TemplateBinding BorderBrush}"
                                                            BorderThickness="{TemplateBinding BorderThickness}"
                                                            CornerRadius="4"
                                                            Padding="10">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Background" Value="#2a3f5a"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                            
                            <!-- Información adicional -->
                            <StackPanel Margin="0,25,0,0">
                                <TextBlock Text="ℹ️ Información de compra" 
                                           Foreground="#66c0f4" 
                                           FontSize="12"
                                           FontWeight="Bold"
                                           Margin="0,0,0,10"/>
                                <TextBlock Text="• Acceso inmediato tras la compra" 
                                           Foreground="#8A8A8A" 
                                           FontSize="11"
                                           Margin="0,0,0,5"/>
                                <TextBlock Text="• Los juegos se añaden a tu biblioteca" 
                                           Foreground="#8A8A8A" 
                                           FontSize="11"
                                           Margin="0,0,0,5"/>
                                <TextBlock Text="• Descarga las veces que quieras" 
                                           Foreground="#8A8A8A" 
                                           FontSize="11"/>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                </Grid>


                <Grid x:Name="Grid_Biblioteca" Visibility="Collapsed" Margin="30">
                    <StackPanel>
                        <TextBlock Text="MIS JUEGOS" FontSize="28" Foreground="White" Margin="0,0,0,20"/>
                        <ListView x:Name="listaBiblioteca"
                  Background="#16202D"
                  BorderThickness="0"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                  ItemsSource="{Binding}">
                            <ListView.ItemContainerStyle>
                                <Style TargetType="ListViewItem">
                                    <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                                    <Setter Property="Padding" Value="0"/>
                                    <Setter Property="Margin" Value="0"/>
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="ListViewItem">
                                                <ContentPresenter/>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </ListView.ItemContainerStyle>
                            <ListView.ItemTemplate>
                                <DataTemplate>
                                    <Border Background="#232F3E" 
                            CornerRadius="8" 
                            Margin="0,0,0,15" 
                            Padding="15"
                            BorderBrush="#3A4A5A"
                            BorderThickness="1">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="200"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            
                            <!-- Imagen del juego -->
                            <Border Grid.Column="0" 
                                    Width="180" 
                                    Height="110" 
                                    Background="Black" 
                                    CornerRadius="5" 
                                    Margin="0,0,20,0">
                                <Image Source="{Binding Imagen, Converter={StaticResource ImagePathConverter}}" 
                                       Stretch="UniformToFill"/>
                            </Border>
                            
                            <!-- Información del juego -->
                            <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                <TextBlock Text="{Binding Titulo}" 
                                           Foreground="White" 
                                           FontWeight="Bold" 
                                           FontSize="18"/>
                                <TextBlock Text="{Binding Genero}" 
                                           Foreground="#7FC7A3" 
                                           FontSize="13" 
                                           Margin="0,4,0,0"/>
                                <TextBlock Text="{Binding Precio, StringFormat={}{0}€}" 
                                           Foreground="#FFD700" 
                                           FontSize="15" 
                                           Margin="0,4,0,0"/>
                                
                                <!-- Estrellas de valoración del usuario -->
                                <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                    <TextBlock Text="Tu valoración: " 
                                               Foreground="#66c0f4" 
                                               FontSize="12" 
                                               Margin="0,0,5,0"/>
                                    <TextBlock Text="★" FontSize="18" Margin="0,0,2,0">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="Gray"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Valoracion}" Value="1">
                                                        <Setter Property="Foreground" Value="Gold"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Valoracion}" Value="2">
                                                        <Setter Property="Foreground" Value="Gold"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Valoracion}" Value="3">
                                                        <Setter Property="Foreground" Value="Gold"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Valoracion}" Value="4">
                                                        <Setter Property="Foreground" Value="Gold"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Valoracion}" Value="5">
                                                        <Setter Property="Foreground" Value="Gold"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <TextBlock Text="★" FontSize="18" Margin="0,0,2,0">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="Gray"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Valoracion}" Value="2">
                                                        <Setter Property="Foreground" Value="Gold"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Valoracion}" Value="3">
                                                        <Setter Property="Foreground" Value="Gold"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Valoracion}" Value="4">
                                                        <Setter Property="Foreground" Value="Gold"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Valoracion}" Value="5">
                                                        <Setter Property="Foreground" Value="Gold"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <TextBlock Text="★" FontSize="18" Margin="0,0,2,0">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="Gray"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Valoracion}" Value="3">
                                                        <Setter Property="Foreground" Value="Gold"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Valoracion}" Value="4">
                                                        <Setter Property="Foreground" Value="Gold"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Valoracion}" Value="5">
                                                        <Setter Property="Foreground" Value="Gold"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <TextBlock Text="★" FontSize="18" Margin="0,0,2,0">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="Gray"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Valoracion}" Value="4">
                                                        <Setter Property="Foreground" Value="Gold"/>
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding Valoracion}" Value="5">
                                                        <Setter Property="Foreground" Value="Gold"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                    <TextBlock Text="★" FontSize="18">
                                        <TextBlock.Style>
                                            <Style TargetType="TextBlock">
                                                <Setter Property="Foreground" Value="Gray"/>
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Valoracion}" Value="5">
                                                        <Setter Property="Foreground" Value="Gold"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </TextBlock.Style>
                                    </TextBlock>
                                </StackPanel>
                                
                                <!-- Valoración promedio global -->
                                <TextBlock Text="{Binding ValoracionPromedioTexto}" 
                                           Foreground="#8A8A8A" 
                                           FontSize="11" 
                                           Margin="0,4,0,0"/>
                            </StackPanel>
                            
                            <!-- Botones de acción -->
                            <StackPanel Orientation="Horizontal" 
                                        Grid.Column="2" 
                                        VerticalAlignment="Center">
                                <Button Content="VALORAR"
                                        Padding="15,8"
                                        Margin="0,0,10,0"
                                        Background="#3d4450"
                                        Foreground="#66c0f4"
                                        FontWeight="Bold"
                                        BorderThickness="0"
                                        Cursor="Hand"
                                        Click="BtnValorarBiblioteca_Click"/>
                                <Button Content="JUGAR"
                                        Padding="18,8"
                                        Background="#5c7e10"
                                        Foreground="#d2efa9"
                                        FontWeight="Bold"
                                        BorderThickness="0"
                                        Cursor="Hand"
                                        Click="BtnJugarBiblioteca_Click"/>
                            </StackPanel>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackPanel>
</Grid>

                <Grid x:Name="Grid_Perfil" Visibility="Collapsed" Margin="30">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <StackPanel Grid.Column="0" Margin="0,0,20,0">
                        <TextBlock Text="MI CUENTA" FontSize="28" Foreground="White" Margin="0,0,0,30"/>

                        <TextBlock Text="Nombre de Perfil" Foreground="#66c0f4" FontWeight="Bold"/>
                        <TextBox x:Name="txtEditUser" Background="#2a3f5a" Foreground="White" Height="35" Margin="0,5,0,20" BorderThickness="0" Padding="5"/>

                        <TextBlock Text="Correo Electrónico" Foreground="#66c0f4" FontWeight="Bold"/>
                        <TextBox Text="usuario@ejemplo.com" Background="#2a3f5a" Foreground="White" Height="35" Margin="0,5,0,20" BorderThickness="0" Padding="5"/>

                        <Button Content="Guardar Cambios" Width="150" Height="40" HorizontalAlignment="Left" Style="{StaticResource BotonVerde}" Click="BtnGuardarPerfil_Click"/>
                    </StackPanel>

                    <Border Grid.Column="1" Background="#14171e" CornerRadius="5" Padding="20">
                        <StackPanel>
                            <TextBlock Text="GESTIÓN DE SALDO" FontSize="22" Foreground="White" Margin="0,0,0,20"/>

                            <Border Background="#2a475e" Padding="15" CornerRadius="3" Margin="0,0,0,20">
                                <DockPanel>
                                    <TextBlock Text="Saldo Actual:" Foreground="#c7d5e0" FontSize="16" VerticalAlignment="Center"/>
                                    <TextBlock x:Name="lblSaldoPerfil" Text="100,00€" DockPanel.Dock="Right" Foreground="#66c0f4" FontSize="24" FontWeight="Bold"/>
                                </DockPanel>
                            </Border>

                            <TextBlock Text="AÑADIR FONDOS" Foreground="White" FontWeight="Bold" Margin="0,0,0,10"/>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                <TextBox x:Name="txtCantidadRecarga" Width="100" Height="35" FontSize="16" VerticalContentAlignment="Center" Background="#000" Foreground="White" BorderThickness="1" BorderBrush="Gray" Text="10" Padding="5"/>
                                <TextBlock Text="€" Foreground="White" FontSize="18" VerticalAlignment="Center" Margin="5,0,15,0"/>

                                <ComboBox x:Name="cmbMetodosGuardados" Width="200" Height="35" Background="#2a3f5a" Foreground="Black"/>
                            </StackPanel>
                            <Button Content="+ Ingresar Dinero" Click="BtnIngresarDinero_Click" Background="#2a475e" Foreground="White" Height="35" Margin="0,0,0,30"/>

                            <Separator Background="#3d4450" Margin="0,10,0,20"/>

                            <TextBlock Text="AÑADIR NUEVO MÉTODO DE PAGO" Foreground="White" FontWeight="Bold" Margin="0,0,0,10"/>

                            <TextBlock Text="Tipo:" Foreground="Gray" Margin="0,5,0,0"/>
                            <ComboBox x:Name="cmbTipoNuevo" Height="30" Margin="0,0,0,10" Foreground="Black">
                                <ComboBoxItem Content="Tarjeta de Crédito/Débito" IsSelected="True"/>
                                <ComboBoxItem Content="Google Pay"/>
                                <ComboBoxItem Content="Tarjeta Prepago (Game/Steam)"/>
                            </ComboBox>

                            <TextBlock Text="Número / ID / Código:" Foreground="Gray" Margin="0,5,0,0"/>
                            <TextBox x:Name="txtDatoNuevo" Background="#2a3f5a" Foreground="White" Height="30" BorderThickness="0" Margin="0,0,0,15"/>

                            <Button Content="Guardar Método" Click="BtnGuardarMetodo_Click" Background="#3d4450" Foreground="White" Height="30"/>

                            <TextBlock Text="Métodos guardados:" Foreground="Gray" Margin="0,15,0,5"/>
                            <ListBox x:Name="listaMetodosVisual" Height="80" Background="#000000" Foreground="Gray" BorderThickness="0"/>

                        </StackPanel>
                    </Border>
                </Grid>

            </Grid>
        </Grid>
    </Grid>
</Window>